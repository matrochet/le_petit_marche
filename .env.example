# NextAuth
NEXTAUTH_URL=https://le-petit-marche.vercel.app
NEXTAUTH_SECRET=

# GitHub OAuth
GITHUB_ID=
GITHUB_SECRET=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Optional: When troubleshooting OAuth callback mismatches in production only
# NEXTAUTH_DEBUG=true
# FORCE_OAUTH_REDIRECT_URI=true
#
# If FORCE_OAUTH_REDIRECT_URI=true, expected redirect URIs are:
#  - Google: https://le-petit-marche.vercel.app/api/auth/callback/google
#  - GitHub: https://le-petit-marche.vercel.app/api/auth/callback/github
GOOGLE_CLIENT_SECRET=

# Stripe
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# Database (Neon Postgres)
# Prefer the POOLER connection string at runtime (DATABASE_URL)
# Use the DIRECT (non-pooled) connection string for migrations (DIRECT_DATABASE_URL)
# Examples:
#   DATABASE_URL=postgres://USER:PASSWORD@POOLER_HOST/db?sslmode=require
#   DIRECT_DATABASE_URL=postgres://USER:PASSWORD@DIRECT_HOST/db?sslmode=require
DATABASE_URL=
DIRECT_DATABASE_URL=
